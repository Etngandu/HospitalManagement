@using HospitalManagement.Entities;
@model ENBHospitalmanagementMvc.Models.DisplayWard
@{
    ViewBag.Title = "Ward List";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";

}

<div class="alert alert-info" role="alert">
    <h2><strong>Ward Crud Operations</strong></h2>
</div>

<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("Create","Ward")')"><i class="fa fa-plus"></i> New Ward</a>
<table id="wardtable" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>Ward_Name</th>
            <th>Ward_Location</th>
            <th>Ward_description</th>
            <th> </th>
        </tr>
    </thead>
</table>
<link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
@*<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />*@
<link href="~/Content/FontAwesome/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, datatable
        $(document).ready(function () {
            datatable = $("#wardtable").DataTable({
                "ajax": {
                    "url": "/Ward/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "Ward_Name" },
                    { "data": "Ward_Location" },
                    { "data": "Ward_description" },
                    {
                        "data": "Id", "render": function (data) {
                            return "<a class= 'btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Edit","Ward")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class= 'btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a> " + "\r\n" +
                                "<a class= 'btn btn-default btn-sm' onclick=location.href='@Url.Action("List", "Bed")/" + data +"'><i class='fa fa-bed'></i> Bed</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "200px"
                    }

                ],
                "language": {

                    "emptyTable": "No data Found, Please Click On <b>Add New</b> Button"
                }

            });

        });

        function PopupForm(url) {
            var formdiv = $('<div/>')
            $.get(url)
                .done(function (response) {
                    formdiv.html(response);

                    Popup = formdiv.dialog({

                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Ward details',
                        height: 500,
                        width: 800,
                        close: function () {

                            Popup.dialog('destroy').remove();
                        }


                    })

                })
        }

        function SubmitForm(form) {

            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            datatable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
            return false;
        }

        function Delete(id) {
            if (confirm('Are You Sure to Delete this Record'))
            {

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Ward")/'+ id,
                    success: function (data) {
                        if (data.success) {
                            datatable.ajax.reload();

                            $.notify(data.message, {
                                globalposition: "top center",
                                className: "success"
                            })
                        }
                    }

                });

            }


        }

    </script>

}