@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="alert alert-info" role="alert">
        <div class="text-center">
            <h1><strong>HOSPITAL MANAGEMENT</strong></h1>
        </div>
    </div>
    <div class="text-center">
        <img src="~/Images/hospital.png" class="rounded mx-auto d-block" alt="Responsive image" width="250" />
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-warning" role="alert">
            <div class="text-center">
                <button type="button" class="btn btn-primary btn-lg btn-block" onclick="location.href='@Url.Action("Index", "Admission")'">Hospital Admissions</button>
            </div>
        </div>
        <div class="text-center">
            <img src="~/Images/admission.jpg" class="rounded mx-auto d-block" alt="Responsive image" width="150" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="alert alert-warning" role="alert">
            <div class="text-center">
                <button type="button" class="btn btn-success btn-lg btn-block" onclick="location.href='@Url.Action("Index", "Patient")'">Hospital Patients</button>
            </div>
        </div>

        <div class="text-center">
            <img src="~/Images/patient.png" class="rounded mx-auto d-block" alt="Responsive image" width="150" />
        </div>
    </div>
</div>