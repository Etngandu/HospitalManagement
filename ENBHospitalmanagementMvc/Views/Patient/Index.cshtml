@using HospitalManagement.Entities;
@model ENBHospitalmanagementMvc.Models.DisplayPatient
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<br />

<div class="alert alert-info" role="alert">
    <h2><strong>Patient Crud Operations</strong></h2>
</div>

<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("Create","Patient")')"><i class="fa fa-user-plus"></i> New Patient</a>
<table id="patienttable" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>Patient_Fullname</th>
            <th>nhs_number</th>
            <th>Date_Of_Birth</th>
            <th> </th>
        </tr>
    </thead>
</table>
@*<link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />*@
@*<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />*@
<link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/Content/FontAwesome/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/js/jquery.dataTables.min.js"></script>
    @*<script type="text/javascript" charset="utf8" src="~/Content/DataTables/js/dataTables.bootstrap4.min.js"></script>*@
    <script type="text/javascript" charset="utf8" src="~/Content/DataTables/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, datatable
        $(document).ready(function () {
            datatable = $("#patienttable").DataTable({
                "ajax": {
                    "url": "/Patient/GetData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    {
                        "data": "Fullname",
                        "autoWidth": true,
                        "render": function (data, type, row, meta) {
                            return '<a href="/Patient/Detail/' + row.Id + '">' + data + '</a>';
                        }
                    },
                    {
                        "data": "nhs_number"
                    },
                    {
                        "data": "Date_Of_Birth",
                        "render": formatdate

                    },
                    {
                        "data": "Id", "render": function (data) {
                           return "<a class= 'btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Edit","Patient")/" + data + "')><i class='fa fa-pencil'></i> Edit</a><a class= 'btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a> " + "\r\n" +
                                "<a class= 'btn btn-default btn-sm' style='margin-left:5px' onclick=location.href='@Url.Action("List", "Record")/" + data + "'><i class='fa fa-files-o' aria-hidden='true'></i>TODO(Record)</a><a class= 'btn btn-default btn-sm' style='margin-left:5px' onclick=location.href='@Url.Action("List", "Doctor_Assigned_to_Patient")/" + data + "'><i class='fa fa-user-md' aria-hidden='true'></i> Doctor</a>" + "\r\n" +
                                "<a class= 'btn btn-default btn-sm' style='margin-left:5px' onclick=location.href='@Url.Action("List", "Diagnose")/" + data + "'><i class='fa fa-flask' aria-hidden='true'></i> Diagnoses</a>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "500px"
                    }

                ],
                "language": {

                    "emptyTable": "No data Found, Please Click On <b>Add New</b> Button"
                }

            });

        });

        function PopupForm(url) {
            var formdiv = $('<div/>')
            $.get(url)
                .done(function (response) {
                    formdiv.html(response);

                    Popup = formdiv.dialog({

                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Patient details',
                        height: 700,
                        width: 1500,
                        close: function () {

                            Popup.dialog('destroy').remove();
                        }


                    })

                })
        }

        function SubmitForm(form) {

            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            datatable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
            return false;
        }

        function Delete(id) {
            if (confirm('Are You Sure to Delete this Record'))
            {

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Ward")/'+ id,
                    success: function (data) {
                        if (data.success) {
                            datatable.ajax.reload();

                            $.notify(data.message, {
                                globalposition: "top center",
                                className: "success"
                            })
                        }
                    }

                });

            }


        }


        function formatdate(data) {
            var value = new Date
                (
                    parseInt(data.replace(/(^.*\()|([+-].*$)/g, ''))
                );
            var dat = value.getMonth() +
                1 +
                "/" +
                value.getDate() +
                "/" +
                value.getFullYear();
            return(dat);

        }

        function Genderparse(data) {
            var gnder;
            switch (data) {
                case 1:
                    gnder="Male"
                    break;
                case 2:
                    gnder="Female"
                    break;
                default:
                // code block
            }
            return gnder;
        }
    </script>

}


