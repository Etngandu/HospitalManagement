@model ENBHospitalmanagementMvc.Models.CreateAndEditDiagnose
   
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="alert alert-info" role="alert">
    <h2><strong><i class="fa fa-bed"></i>Create  Diagnostic</strong></h2>
</div>
@using (Html.BeginForm("Create", "Diagnose", FormMethod.Post, new { onsubmit = "return SubmitForm(this);" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("Patient_Id", (int)ViewBag.Patient_Id)

    <div class="form-group">
          @Html.Label("Staff", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">           

        @Html.DropDownListFor(model=>model.Staff_Id, new SelectList(Model.ListStaff, dataValueField: "Value", dataTextField: "Text"),
        htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Staff_Id, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Diagnose_details, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Diagnose_details, new { htmlAttributes = new { style = "width: 100%; max-width: 100%;" } })
            @Html.ValidationMessageFor(model => model.Diagnose_details, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
